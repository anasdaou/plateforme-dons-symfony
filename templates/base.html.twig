<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Plateforme de dons{% endblock %}</title>

    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
        crossorigin="anonymous"
    >

    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
</head>

<body class="bg-light">

<nav class="navbar navbar-expand-lg custom-navbar">
    <div class="container">

        <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
            <img src="{{ asset('images/logo.png') }}" alt="Logo" height="40" class="me-2 rounded-circle">
            <strong>Plateforme de dons</strong>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNavbar">

            <ul class="navbar-nav mx-auto mb-2 mb-lg-0">

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                </li>

                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('user_donations') }}">Mes dons</a>
                    </li>

                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                Administration
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="{{ path('admin_campaigns') }}">
                                        Gérer les campagnes
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="{{ path('admin_proposals') }}">
                                        Propositions de campagnes
                                    </a>
                                </li>
                            </ul>
                        </li>
                    {% endif %}

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('account_profile') }}">Confidentialité</a>
                    </li>
                {% endif %}

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_about') }}">À propos</a>
                </li>
            </ul>

            <div class="d-flex align-items-center">
                {% if app.user %}
                    <span class="me-3 text-white small">
                        Connecté : <strong>{{ app.user.email }}</strong>
                    </span>
                    <a href="{{ path('app_logout') }}" class="btn btn-outline-light btn-sm">
                        Déconnexion
                    </a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-outline-light btn-sm me-2">
                        Connexion
                    </a>
                    <a href="{{ path('app_register') }}" class="btn btn-light btn-sm">
                        Inscription
                    </a>
                {% endif %}
            </div>

        </div>
    </div>
</nav>

<div class="container mt-3">
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
        {% endfor %}
    {% endfor %}
</div>

<main class="container my-4">
    {% block body %}{% endblock %}
</main>

<footer class="footer-soft text-white py-3 mt-5">
    <div class="container text-center small">
        © {{ "now"|date("Y") }} – Plateforme de dons & collecte caritative
    </div>
</footer>

<script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
></script>

{% block javascripts %}{% endblock %}
</body>
</html>
