{% extends 'base.html.twig' %}

{% block title %}Historique de mes dons{% endblock %}

{% block body %}
<div class="container my-5">

    <h1>Mes dons</h1>

    {% if donations is empty %}
        <p>Vous n'avez effectué aucun don pour le moment.</p>
    {% else %}

        <table class="table mt-3">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Campagne</th>
                    <th>Montant</th>
                </tr>
            </thead>

            <tbody>
                {% for donation in donations %}
                    <tr>
                        <td>{{ donation.createdAt|date('d/m/Y H:i') }}</td>
                        <td>{{ donation.campaign.title }}</td>
                        <td>{{ donation.amount }} MAD</td>
                        <td>
                            {% if donation.campaign.status == 'EN_COURS' %}
                                <span class="badge bg-primary">Campagne en cours</span>
                            {% elseif donation.campaign.status == 'TERMINEE' %}
                                <span class="badge bg-success">Campagne terminée</span>
                            {% elseif donation.campaign.status == 'SUPPRIMEE' %}
                                <span class="badge bg-secondary">Campagne retirée</span>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>

    {% endif %}
</div>
{% endblock %}
