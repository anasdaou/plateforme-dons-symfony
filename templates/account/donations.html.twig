{% extends 'base.html.twig' %}

{% block title %}Historique de mes dons{% endblock %}

{% block body %}
<div class="container my-5">

    <h1>Mes dons</h1>

    {% if donations is empty %}
        <p>Vous n'avez effectu√© aucun don pour le moment.</p>
    {% else %}

        <table class="table mt-3">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Campagne</th>
                    <th>Montant</th>
                </tr>
            </thead>

            <tbody>
                {% for donation in donations %}
                    <tr>
                        <td>{{ donation.createdAt|date('d/m/Y H:i') }}</td>
                        <td>
                            <a href="{{ path('campaign_show', {id: donation.campaign.id}) }}">
                                {{ donation.campaign.title }}
                            </a>
                        </td>
                        <td>{{ donation.amount }} MAD</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    {% endif %}
</div>
{% endblock %}
