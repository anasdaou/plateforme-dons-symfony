{% extends 'base.html.twig' %}

{% block title %}Administration des campagnes{% endblock %}

{% block body %}
<div class="container my-4">

    <h1 class="mb-4">Administration des campagnes</h1>

    {# Flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card shadow-sm">
        <div class="card-body">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <strong>Liste des campagnes</strong>
                <span class="text-muted small">Tri : plus récentes en premier</span>
            </div>

            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Statut</th>
                            <th>Objectif</th>
                            <th>Collecté</th>
                            <th style="min-width: 260px;">Progression</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                    {% for campaign in campaigns %}

                        {% set target = campaign.targetAmount ?: 0 %}
                        {% set collected = campaign.collectedAmount ?: 0 %}
                        {% if target > 0 %}
                            {% set progress = (collected / target * 100) %}
                        {% else %}
                            {% set progress = 0 %}
                        {% endif %}

                        {# barre plafonnée à 100% pour éviter >100% visuellement #}
                        {% set progressBar = progress > 100 ? 100 : progress %}
                        {% set progressText = progress > 100 ? 100 : progress|round(0, 'floor') %}

                        <tr>
                            <td class="fw-semibold">{{ campaign.title }}</td>

                            <td>
                                {% if campaign.status == 'EN_COURS' %}
                                    <span class="badge bg-success">En cours</span>
                                {% elseif campaign.status == 'TERMINEE' %}
                                    <span class="badge bg-primary">Terminée</span>
                                {% elseif campaign.status == 'SUPPRIMEE' %}
                                    <span class="badge bg-secondary">Retirée</span>
                                {% else %}
                                    <span class="badge bg-dark">{{ campaign.status }}</span>
                                {% endif %}
                            </td>

                            <td>{{ target|number_format(0, '.', ' ') }} MAD</td>
                            <td>{{ collected|number_format(0, '.', ' ') }} MAD</td>

                            <td>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar" role="progressbar"
                                         style="width: {{ progressBar }}%;"
                                         aria-valuenow="{{ progressBar }}" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                                <div class="small text-muted mt-1">
                                    {{ progressText }}% (barre plafonnée à 100%)
                                </div>
                            </td>

                            <td class="text-end">
                                {# Voir #}
                                <a class="btn btn-outline-primary btn-sm"
                                   href="{{ path('campaign_show', {id: campaign.id}) }}">
                                    Voir
                                </a>

                                {# Actions admin : toggle + retirer #}
                                {% if is_granted('ROLE_ADMIN') %}
                                    {% if campaign.status != 'SUPPRIMEE' %}

                                        {# Toggle EN_COURS <-> TERMINEE #}
                                        <form method="post"
                                              action="{{ path('admin_campaign_toggle_status', {id: campaign.id}) }}"
                                              class="d-inline">
                                            <input type="hidden" name="_token"
                                                   value="{{ csrf_token('toggle_campaign_' ~ campaign.id) }}">
                                            <button type="submit" class="btn btn-outline-secondary btn-sm">
                                                {% if campaign.status == 'EN_COURS' %}
                                                    Terminer
                                                {% else %}
                                                    Remettre en cours
                                                {% endif %}
                                            </button>
                                        </form>

                                        {# Retirer (statut SUPPRIMEE) #}
                                        <form method="post"
                                              action="{{ path('admin_campaign_delete', {id: campaign.id}) }}"
                                              class="d-inline"
                                              onsubmit="return confirm('Retirer cette campagne ? Elle ne sera plus visible publiquement.');">
                                            <input type="hidden" name="_token"
                                                   value="{{ csrf_token('delete_campaign_' ~ campaign.id) }}">
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                Retirer
                                            </button>
                                        </form>

                                    {% endif %}
                                {% endif %}
                            </td>
                        </tr>

                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                Aucune campagne trouvée.
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>

                </table>
            </div>

        </div>
    </div>
</div>
{% endblock %}
