{% extends 'base.html.twig' %}

{% block title %}{{ campaign.title }}{% endblock %}

{% block body %}
    <div class="container my-5">

        <a href="{{ path('app_home') }}">&larr; Retour aux campagnes</a>

        <h1 class="mt-3">{{ campaign.title }}</h1>

        <p>{{ campaign.description }}</p>

        <p>
            Objectif : <strong>{{ campaign.targetAmount }} MAD</strong><br>
            Collect√© : <strong>{{ campaign.collectedAmount }} MAD</strong>
        </p>

        {% set percent = 0 %}
        {% if campaign.targetAmount > 0 %}
            {% set percent = (campaign.collectedAmount / campaign.targetAmount * 100)|round(0, 'floor') %}
        {% endif %}

        <p>Progression : {{ percent }}%</p>

        <hr>

        <a href="{{ path('campaign_donate', {id: campaign.id}) }}" class="btn btn-primary">
            Faire un don
        </a>


    </div>
{% endblock %}
