{% extends 'base.html.twig' %}

{% block title %}Faire un don - {{ campaign.title }}{% endblock %}

{% block body %}
    <div class="container my-5">
        <a href="{{ path('campaign_show', {id: campaign.id}) }}" class="btn btn-link mb-3">
            &larr; Retour à la campagne
        </a>

        <h1 class="mb-4">Faire un don pour : {{ campaign.title }}</h1>

        <p class="text-muted">
            Objectif : <strong>{{ campaign.targetAmount }} MAD</strong> –
            Collecté : <strong>{{ campaign.collectedAmount }} MAD</strong>
        </p>

        <div class="card mt-4">
            <div class="card-body">
                {# Affiche les erreurs globales du formulaire #}
                {{ form_start(form) }}

                    {{ form_row(form.amount) }}
                    {{ form_row(form.donorName) }}
                    {{ form_row(form.donorEmail) }}
                    {{ form_row(form.paymentMethod) }}

                    <button class="btn btn-primary mt-3">
                        Continuer vers le paiement
                    </button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
