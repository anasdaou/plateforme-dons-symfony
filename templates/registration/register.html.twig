{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

<div class="row justify-content-center mt-4">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body p-4">

                <h1 class="h4 mb-3 text-center">Création de compte</h1>

                <p class="text-muted text-center mb-4">
                    Créez un compte pour pouvoir faire des dons,
                    proposer des campagnes et suivre votre historique.
                </p>

                {{ form_start(registrationForm) }}

                    <div class="mb-3">
                        {{ form_row(registrationForm.firstName) }}
                        {{ form_row(registrationForm.lastName) }}
                        {{ form_label(registrationForm.email, 'Adresse email') }}
                        {{ form_widget(registrationForm.email, {
                            attr: { placeholder: 'exemple@domaine.com' }
                        }) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
                        {{ form_widget(registrationForm.plainPassword, {
                            attr: { placeholder: 'Choisissez un mot de passe sécurisé' }
                        }) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>

                    <button type="submit" class="btn btn-success w-100">
                        Créer mon compte
                    </button>

                    <p class="mt-3 mb-0 text-center">
                        Vous avez déjà un compte ?
                        <a href="{{ path('app_login') }}">Se connecter</a>
                    </p>

                {{ form_end(registrationForm) }}

            </div>
        </div>
    </div>
</div>
{% endblock %}
