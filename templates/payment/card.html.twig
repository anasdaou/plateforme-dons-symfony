{% extends 'base.html.twig' %}

{% block title %}Paiement par carte{% endblock %}

{% block body %}
    <div class="container my-5">
        <a href="{{ path('campaign_show', {id: campaign.id}) }}">&larr; Retour à la campagne</a>

        <h1 class="mt-3">Paiement par carte bancaire</h1>

        <p>Vous allez payer <strong>{{ donation.amount }} MAD</strong> pour la campagne :
            <strong>{{ campaign.title }}</strong></p>

        <form method="post">
            <div>
                <label>Numéro de carte :</label><br>
                <input type="text" name="card_number" required>
            </div>
            <div>
                <label>Date d'expiration :</label><br>
                <input type="text" name="card_expiry" placeholder="MM/AA" required>
            </div>
            <div>
                <label>Cryptogramme (CVV) :</label><br>
                <input type="text" name="card_cvv" required>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Payer</button>
        </form>
    </div>
{% endblock %}
