{% extends 'base.html.twig' %}

{% block title %}Paiement PayPal - {{ campaign.title }}{% endblock %}

{% block body %}
<div class="row justify-content-center mt-4">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body p-4">

                <h1 class="h5 mb-3 text-center">Paiement avec PayPal</h1>

                <p class="text-muted small text-center mb-3">
                    Paiement pour la campagne :
                    <strong>{{ campaign.title }}</strong><br>
                    Montant : <strong>{{ donation.amount }} MAD</strong>
                </p>

                <div class="alert alert-info small">
                    <strong>Note :</strong> ce paiement est une <u>simulation</u>.
                    Aucun vrai débit PayPal ne sera effectué.
                </div>

                <form method="post">
                    <input type="hidden" name="_token" value="{{ csrf_token('paypal_payment_' ~ donation.id) }}">

                    <div class="mb-3">
                        <label for="paypalEmail" class="form-label">Email PayPal</label>
                        <input type="email" id="paypalEmail" name="paypal_email" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="paypalPassword" class="form-label">Mot de passe PayPal</label>
                        <input type="password" id="paypalPassword" name="paypal_password" class="form-control" required>
                    </div>

                    <button class="btn btn-primary w-100 mt-2" type="submit">
                        Payer avec PayPal
                    </button>

                    <p class="text-center mt-3 mb-0">
                        <a href="{{ path('campaign_show', {id: campaign.id}) }}">
                            Annuler et revenir à la campagne
                        </a>
                    </p>
                </form>

            </div>
        </div>
    </div>
</div>
{% endblock %}
